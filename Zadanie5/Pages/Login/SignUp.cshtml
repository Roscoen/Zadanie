@page
@model Zadanie5.Pages.SignUpModel
@{
}
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="createAccount.userName" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="createAccount.userName" class="form-control">
                <span class="error-span" asp-validation-for="createAccount.userName"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="createAccount.password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="createAccount.password" class="form-control">
                <span class="error-span" asp-validation-for="createAccount.password"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-secondary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
