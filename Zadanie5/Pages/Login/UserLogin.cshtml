@page
@model Zadanie5.Pages.Login.UserLoginModel
@{
}
<div>
    @Model.Message
</div>
<div class="row col-sm-12">
    <a asp-page="SignUp" class="btn btn-secondary btn-large mr-3">Utwórz konto</a>
</div>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="accountUser.userName" class="control-label"></label>
            <div class="col-sm-6">
                <input asp-for="accountUser.userName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="accountUser.password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="accountUser.password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>